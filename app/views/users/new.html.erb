<h1>New Account</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this recipe from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@user, html: { class: 'form-horizontal'}) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :first_name, class: 'focusedInput' %>
      <div class="controls">
        <%= f.text_field :first_name, class: 'focusedInput' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, class: 'focusedInput' %>
      <div class="controls">
        <%= f.text_field :last_name, class: 'focusedInput' %>
      </div>
    </div>
    <%= f.fields_for :emails do |email|%>
      <div class="control-group">
        <%= email.label :address, 'Email address', class: 'focusedInput' %>
        <div class="controls">
          <%= email.text_field :address, class: 'focusedInput' %>
        </div>
      </div>
    <% end %>
    <%= f.fields_for :organizations do |org|%>
      <div class="control-group">
        <%= org.label :name, 'Organization', class: 'focusedInput' %>
        <div class="controls">
          <%= org.text_field :name, class: 'focusedInput' %>
        </div>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :password, class: 'focusedInput' %>
      <div class="controls">
        <%= f.password_field :password, class: 'focusedInput' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, 'Password confirmation', class: 'focusedInput' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, class: 'focusedInput' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit 'Sign Up', class: 'btn primary' %>
    </div>
  </fieldset>
<% end %>