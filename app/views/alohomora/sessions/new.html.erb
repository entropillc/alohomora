<div class="row-fluid">
  <div class="span5 well">
    <%= flash[:error] %>
    <%= form_tag alohomora.sessions_path do %>
      <fieldset>
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email], :placeholder => "john.doe@example.com"  %>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
          <div class="form-actions">
            <%= submit_tag "Sign In", :class => "btn primary" %>
          </div>
      </fieldset>
    <% end %>
  </div>
</div>